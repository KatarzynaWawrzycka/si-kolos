{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.book_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.book_list'|trans }}</h1>
    {% if book is defined and book|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.genre_id'|trans }}</th>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.total_pages'|trans }}</th>
                <th>{{ 'label.rating'|trans }}</th>
                <th>{{ 'label.ISBN'|trans }}</th>
                <th>{{ 'label.publishing_date'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.id }}</td>
                    <td>{{ book.genre }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.totalPages }}</td>
                    <td>{{ book.isbn }}</td>
                    <td>{{ book.publishedDate|date('Y') }}</td>
                    <td>
                        <a href="{{ url('book_show', {id: book.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}